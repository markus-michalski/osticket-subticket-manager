{
    "name": "osticket/subticket-manager",
    "description": "Advanced subticket management plugin for osTicket",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "SubticketManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SubticketManager\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage/html",
        "test:coverage-check": "phpunit --coverage-text --coverage-clover=coverage.xml && php -r \"if((int)shell_exec('grep -oP \\\"lines-covered=\\\\\\\"\\\\K[0-9]+\\\" coverage.xml')/(int)shell_exec('grep -oP \\\"lines-valid=\\\\\\\"\\\\K[0-9]+\\\" coverage.xml')*100 < 80) exit(1);\"",
        "analyse": "phpstan analyse src tests --level=8"
    }
}
